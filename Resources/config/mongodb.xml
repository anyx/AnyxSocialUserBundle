<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="anyx_social_user.account.manager.class">Anyx\SocialUserBundle\Document\AccountManager</parameter>
		<parameter key="anyx_social_user.user.manager.class">Anyx\SocialUserBundle\Document\UserManager</parameter>
        <parameter key="anyx_social_user.user.account.class">Anyx\SocialUserBundle\Document\SocialAccount</parameter>
	</parameters>

    <services>
        <service id="anyx_social_user.account.manager" class="%anyx_social_user.account.manager.class%">
            <argument type="service" id="fos_user.document_manager" />
   			<call method="setAccountClass">
				<argument>%anyx_social_user.user.account.class%</argument>
			</call>
   			<call method="setUserClass">
				<argument>%fos_user.model.user.class%</argument>
			</call>
		</service>
		<!-- User managers -->
		<service id="anyx_social_user.user.manager" class="%anyx_social_user.user.manager.class%" public="false">
            <argument type="service" id="security.encoder_factory" />
            <argument type="service" id="fos_user.util.username_canonicalizer" />
            <argument type="service" id="fos_user.util.email_canonicalizer" />
            <argument type="service" id="fos_user.document_manager" />
            <argument>%fos_user.model.user.class%</argument>
			<call method="setDispatcher">
				<argument type="service" id="event_dispatcher"/>
			</call>
		</service>
	</services>

</container>
