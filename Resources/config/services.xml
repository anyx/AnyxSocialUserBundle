<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
		<!-- o -->
		<parameter key="anyx_social_user.account.factory.class">Anyx\SocialUserBundle\Model\AccountFactory</parameter>
		
		<parameter key="anyx_social_user.controller.login.class">Anyx\SocialUserBundle\Controller\LoginController</parameter>

	</parameters>

    <services>
		<service id="anyx_social_user.account.factory" class="%anyx_social_user.account.factory.class%">
		</service>

		<!-- Controllers -->
		<service id="anyx_social_user.controller.login" class="%anyx_social_user.controller.login.class%">
			<argument type="service" id="anyx_social.authentication.manager" />
			<argument type="service" id="anyx_social_user.account.factory" />
			<argument type="service" id="fos_user.user_manager" />
			<argument type="service" id="security.context" />
		</service>		
	</services>

</container>
